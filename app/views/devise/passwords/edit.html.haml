= form_wrapper('Изменить пароль') do
  = simple_form_for(resource, options_for_horizontal_form.merge(as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-horizontal' })) do |f|
    = f.error_notification

    = f.input :reset_password_token, as: :hidden
    = f.full_error :reset_password_token

    = f.input :password, required: true, autofocus: true, hint: ("Минимальная длина пароля: #{@minimum_password_length} символов" if @minimum_password_length)
    = f.input :password_confirmation, required: true

    = f.button :submit, 'Изменить мой пароль'

= render 'devise/shared/links'
